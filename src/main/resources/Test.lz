class MouseHandler {
    fun mouseClick(x: Double, y: Double) {
        println("X: " + x + " Y: " + y)
    }

    fun init() {
        addRegion(0.0, 0.0, 100.0, 100.0)
        addRegion(0.0, 100.0, 100.0, 100.0)
        addRegion(100.0, 0.0, 100.0, 100.0)
        addRegion(100.0, 100.0, 100.0, 100.0)
    }

    fun regionClick(region: Int) {
        if(region >= 0) {
            println(region)
        }
    }
}